---
layout: layouts/base.njk
templateClass: tmpl-post
---

<article>
  <header>
    <h1 class="color-bg {{ color }}">{{ title }}</h1>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>


    {% include "section-postmeta.njk" %}
  <footer>
</article>
    {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {%- if nextPost or previousPost %}
      <ul>
        {%- if nextPost %}
          <li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if previousPost %}
          <li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
      </ul>
    {%- endif %}

    {% include "section-subscribe.njk" %}