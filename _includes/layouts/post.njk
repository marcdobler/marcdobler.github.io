---
layout: layouts/base.njk
templateClass: tmpl-post
type: post
eleventyComputed:
  meta:
    site:
      name: "{{ metadata.title }}" 
      description: "{{ metadata.description }}" 
      url: "{{ metadata.url }}"
      logo:
        src: https://example.com/images/logo.png
        width: 1200
        height: 630
    language: en-US
    url: "{{ page.url | url }}"
    title: "{{ title }}"
    description: "{{ excerpt }}"
    image:
      src: https://example.com/images/page.png
    author:
      name: "{{ metadata.author.name }}"
    published: "{{ date }}"
    modified: "{% if updateDate %}{{ updateDate }}{% endif %}"
    section: Example
---

<article class="color-bg {{ color }}">
  <header>
    <h1>{{ title }}</h1>
  </header>

  <main>
    
    {{ content | safe }}
  </main>

  <footer>


    {% include "section-postmeta.njk" %}
  <footer>
</article>
    {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {%- if nextPost or previousPost %}
      <ul>
        {%- if nextPost %}
          <li>Next: <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if previousPost %}
          <li>Previous: <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
      </ul>
    {%- endif %}

    {% include "section-subscribe.njk" %}