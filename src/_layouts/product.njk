            <div>
              <a class="color {{ color }}" href="#s3">
                <span class="material-symbols-outlined">
                arrow_back
                </span>
              </a>
              <a class="color {{ color }}" href="#s1">
                <span class="material-symbols-outlined">
                arrow_forward
                </span>
              </a>
            </div>
          </div>

          <div class="bullets">
            <a href="#s1"><img src="/assets/images/corals/acropora-millepora.jpg"/></a>
