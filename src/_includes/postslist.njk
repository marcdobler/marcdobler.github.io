<ul reversed class="grid no-style {{ collectionClass }}" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
  {% for post in postslist | reverse %}
    <li class="col-6 card {% if post.url == url %} postlist-item-active{% endif %}{% if post.color == url %} color {{ post.data.color }}{% endif %}">
      <a href="{{ post.url | url }}" class="link">
        <h3 class="title {% if post.color == url %}color {{ post.data.color }}{% endif %}">
          {% if post.data.title %}{{ post.data.title }}
          {% else %}
            <code>{{ post.url }}</code>
          {% endif %}
        </h3>
        {% if post.data.excerpt %}
          <div class="excerpt {% if post.color == url %}color {{ post.data.color }}{% endif %}">{{ post.data.excerpt }}</div>
        {% endif %}
        <time class="date {% if post.color == url %}color {{ post.data.color }}{% endif %}" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
      </a>
    </li>
  {% endfor %}
  {% if collectionReadMore === "show" %}
    <li class="col-12 card color bluelight">
      <a class="link" href="{{ collectionLink | url }}">
        <h3 class="title">{{ collectionReadMoreTitle }}</h3>
        <p class="excerpt color bluelight">
          {{ collectionReadMoreText }}
        </p>
      </a>
    </li>
  {% endif %}
</ul>